/* pages/verify/index.wxss */
.verigypage{
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  background-color: rgb(243, 239, 252);
}
.verigy-inputpay{
  background: #FFFFFF;
  border: 1rpx solid #D8D8D8;
  height: 96rpx;
  padding-left: 30rpx;
  width: calc( 100% - 32rpx);
  overflow: hidden;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0px;
  margin: 40rpx 0 20rpx;
}
.verigy-input{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 0 40rpx 0;
}
.verigy-inputsure{
  display: inline-flex;
  height: 96rpx;
  width: calc( 60% - 30rpx );
  padding-left: 30rpx;
  background: #FFFFFF;
  border: 1rpx solid #D8D8D8;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0px;
}
.verigy-send{
  display: inline-flex;
  height: 96rpx;
  width: 40%;
  background: #FFFFFF;
  border: 1rpx solid #D8D8D8;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0px;
  justify-content: center;
  align-items: center;
}

.verigy-btn{
  width: 100%;
  font-size: 28rpx;
  color: #FFFFFF;
  height: 96rpx;
  line-height: 96rpx;
}